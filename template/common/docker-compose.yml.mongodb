services:
  db:
    image: mongo:6.0
    restart: always
    ports:
      - "27017:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: ${DB_USER:-root}
      MONGO_INITDB_ROOT_PASSWORD: ${DB_PASSWORD:-mypassword}
      MONGO_INITDB_DATABASE: ${DB_NAME:-mydb}
    volumes:
      - mongo_data:/data/db

volumes:
  mongo_data: